{
  "name": "Undercover",
  "version": "0.1",
  "description": "Automatically redirect pages to incognito when going to a specific domain.",
  "permissions": ["storage", "windows", "webNavigation"],
  "background": {
    "scripts": ["./background.js"],
    "persistent": false
  },
  // "browser_action": {
  //   "default_popup": "options.html"
  // },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "manifest_version": 2
}
